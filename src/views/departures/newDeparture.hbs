<script>
    logVerify();
</script>
{{>content-wrapper-start}}
<!-- Main Content -->
<div class="content h-100">
    {{>navtop}}
    <div class="container-fluid widther">
        <!-- Page Heading -->
        <div class="row w-100 text-center">
            <div class="col w-100 text-center">
                <h5><b>Registrar salida</b></h5>
            </div>
        </div>

        <!-- new trip information -->
        <div class="row">
            <div class="card shadow-lg w-100">
                <h6 class="h6 pt-3 pl-3"><b>Información del viaje</b></h6>
                <div class="h-divider"></div>
                <div class="form p-2">
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label>Empresa:</label>
                            <select id="companyInput" onChange="selectNewCompany()" class="form-control text-small">
                                {{#each companies}}
                                <option value="{{companyId}}">{{companyName}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Hora:</label>
                            <input class="form-control text-small" type="time" name="newDepartureTimeInput"
                                id="newDepartureTimeInput" onchange="saveActualDepartureData()">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm">
                            <label>Vehículo:</label>
                            <input class="form-control text-small" type="text" id="newDepartureVehicleInput" onchange="saveActualDepartureData()">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- adding agent to new trip -->
        <div class="row">
            <div class="card shadow-lg w-100 mt-2">
                <h6 class="h6 pt-3 pl-3"><b>Agregar agentes</b></h6>
                <div class="h-divider"></div>
                <div class="form p-2">
                    <div class="form-row">
                        <div class="input-group mb-3">
                            <input id="employeeNumberInput" type="text" class="form-control text-small"
                                placeholder="Número de empleado">
                            <div class="input-group-append">
                                <button class="btn btn-sm btn-secondary" onclick="clearInputEmployeeNumber()"><i
                                        class="fa fa-times-circle ml-1 mr-1"></i></button>
                                <button class="btn btn-sm btn-primary" onclick="searchAgentByEmployeeNumber()"><i
                                        class="fa fa-search ml-2 mr-2"></i></button>
                                <button class="btn btn-sm btn-success" onclick="showQr()"><i
                                        class="fa fa-qrcode ml-2 mr-2"></i></button>
                            </div>
                        </div>
                    </div>
                    <div id="reader"></div>
                </div>
            </div>
        </div>

        <!-- Added to trip -->
        <div class="row">
            <div class="card shadow-lg w-100 mt-2">
                <h6 class="h6 pt-3 pl-3"><b>Agentes agregados</b></h6>
                <div class="h-divider"></div>
                <div class="form p-2">
                    <div class="form-row" id="agentsAddedsToTripDiv">
                        <div style="width: 100%;">
                            <div class="card shadow-lg mb-2 p-0">
                                <div class="card-body text-small text-center">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <p> No hay agentes </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row w-100">
            <div class="col-sm w-100 text-center m-3 p-3 btn-group">
                <button class="btn btn-sm btn-warning p-2 m-2" onclick="goToHome()"><i class="fa fa-times"></i> Cancelar</button>
                <button class="btn btn-sm btn-info p-2 m-2" onclick="clearTrip()"><i class="fa fa-trash"></i> Vaciar</button>
                <button class="btn btn-sm btn-success p-2 m-2" onclick="registerTrip()"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->

{{>footer}}

<!-- end of main content -->
{{>content-wrapper-end}}

<script src="/html5-qrcode.min.js"></script>
<script src="/js/departures.js"></script>
